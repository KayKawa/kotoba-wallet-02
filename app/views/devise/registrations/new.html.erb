<%= render "shared/second-header"%>
<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.js" defer></script>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <div class="container max-w-full mx-auto py-2 px-6">
    <div class="font-sans">
      <div class="max-w-sm mx-auto px-6">
        <div class="relative flex flex-wrap">
          <div class="w-full relative">
            <form class="mt-8">
              <div class="mx-auto max-w-lg">
                <div class="py-2">
                  <label class="px-1 text-sm text-gray-600">メールアドレス（ログインID）</label>
                  <%= f.email_field :email, class:"text-md block px-3 py-2  rounded-lg w-full 
                bg-white border-2 border-yellow-500 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
                </div>
                <div class="py-2">
                  <label class="px-1 text-sm text-gray-600">ご希望のパスワード</label>
                  <%= f.password_field :password, class:"text-md block px-3 py-2  rounded-lg w-full 
                bg-white border-2 border-yellow-500 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
                </div>
                <div class="py-2">
                  <label class="px-1 text-sm text-gray-600">パスワードの確認</label>
                  <%= f.password_field :password_confirmation, class:"text-md block px-3 py-2  rounded-lg w-full 
                bg-white border-2 border-yellow-500 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
                </div>
                <div class="py-2">
                  <span class="px-1 text-sm text-gray-600">ニックネーム</span>
                  <%= f.text_area :nickname, class:"resize-none h-11 text-md block px-3 py-2  rounded-lg w-full 
                bg-white border-2 border-yellow-500 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none", id:"email", placeholder:"xxxxxx@xxxx.com" %>
                </div>
                <div class="py-2">
                  <span class="px-1 text-sm text-gray-600">性別</span>
                  <div class="flex justify-center flex-wrap">
                    <%= f.radio_button :gender_id, '1' ,class:"form-radio h-5 w-5 text-yellow-500 outline-none",checked: true %>
                    <%= f.label :gender_id, '男性', :value => '1' ,class:"pl-3 pr-3 text-gray-700 outline-none"%>
                    <%= f.radio_button :gender_id, '2',class:"form-radio h-5 w-5 text-yellow-500" %>
                    <%= f.label :gender_id, '女性', :value => '2' ,class:"pl-3 pr-3 text-gray-700"%>
                    <%= f.radio_button :gender_id, '3',class:"form-radio h-5 w-5 text-yellow-500" %>
                    <%= f.label :gender_id, '選択しない', :value => '3' ,class:"pl-3 pr-3 text-gray-700"%>
                  </div>
                  <div class="py-2">
                    <span class="px-1 text-sm text-gray-600">氏名（全角）</span>
                    <div class="flex justify-center flex-wrap">
                      <%= f.text_area :last_name, class:"resize-none h-11 text-md block px-3 py-2  rounded-lg w-1/2 
                bg-white border-2 border-yellow-500 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none", id:"email", placeholder:"xxxxxx@xxxx.com" %>
                      <%= f.text_area :first_name, class:"resize-none h-11 text-md block px-3 py-2  rounded-lg w-1/2 
                bg-white border-2 border-yellow-500 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none", id:"email", placeholder:"xxxxxx@xxxx.com" %>
                    </div>
                  </div>
                  <div class="py-2">
                    <span class="px-1 text-sm text-gray-600">フリガナ（全角）</span>
                    <div class="flex justify-center flex-wrap">
                      <%= f.text_area :last_kana, class:"resize-none h-11 text-md block px-3 py-2  rounded-lg w-1/2 
                bg-white border-2 border-yellow-500 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none", id:"email", placeholder:"xxxxxx@xxxx.com" %>
                      <%= f.text_area :first_kana, class:"resize-none h-11 text-md block px-3 py-2  rounded-lg w-1/2 
                bg-white border-2 border-yellow-500 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none", id:"email", placeholder:"xxxxxx@xxxx.com" %>
                    </div>
                  </div>
                  <div class="py-2">
                    <span class="px-1 text-sm text-gray-600">フリガナ（全角）</span>
                    <div class="flex justify-center flex-wrap input-birth-wrap">
                      <div class='flex flex-wrap'>
                        <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
                      </div>
                    </div>
                    <%= f.fields_for :wallet, Wallet.new do |f| %>
                      <%= f.hidden_field :stock_quantity, value: 0 %>
                    <% end %>
                    <%= f.submit "ログイン" ,class:"mt-3 text-lg font-semibold 
                bg-gray-800 w-full text-white rounded-lg
                px-6 py-3 block shadow-xl hover:text-white hover:bg-black" %>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render "shared/second-footer"%>
